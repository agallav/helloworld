pipeline {
    agent { docker { image 'python:3.5.1' } }
    stages {
        stage('Build') {
            steps {
                sh 'python --version'
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo "Deoloy"'
            }
        }

        stage('Test') {
            steps {
                sh 'echo "Deoloy"'
            }
        }

        stage('Release') {
            steps {
                sh 'echo "Deoloy"'
            }
        }

        stage('Deploy to Prod') {
            steps {
                sh 'echo "Deoloy"'
            }
        }
    }
}
